<body>

<div class="container">
    <h2>واتساب برو - إرسال جماعي</h2>
    
    <label for="message">الرسالة الموحدة:</label>
    <textarea id="message" rows="4" placeholder="اكتب رسالتك هنا..."></textarea>

    <label for="numbers">قائمة الأرقام:</label>
    <textarea id="numbers" rows="6" placeholder="ضع كل رقم في سطر جديد مع مفتاح الدولة (مثال: 966500000000)"></textarea>
    <p class="hint">سيتم حفظ هذه البيانات محلياً في متصفحك فقط.</p>

    <div id="statusBox" class="status"></div>

    <div class="btn-group">
        <button class="btn-save" onclick="saveToLocal()">حفظ البيانات</button>
        <button class="btn-send" onclick="sendMessages()">بدء الإرسال</button>
    </div>
</div>

<script>
    // 1. قاعدة البيانات المحلية (LocalStorage)
    // تحميل البيانات عند فتح الصفحة
    window.onload = function() {
        if(localStorage.getItem('ws_message')) {
            document.getElementById('message').value = localStorage.getItem('ws_message');
        }
        if(localStorage.getItem('ws_numbers')) {
            document.getElementById('numbers').value = localStorage.getItem('ws_numbers');
        }
    };

    // حفظ البيانات في قاعدة البيانات المحلية
    function saveToLocal() {
        const msg = document.getElementById('message').value;
        const nums = document.getElementById('numbers').value;

        localStorage.setItem('ws_message', msg);
        localStorage.setItem('ws_numbers', nums);

        showStatus("تم حفظ البيانات بنجاح!", "success");
    }

    // 2. منطق الإرسال
    function sendMessages() {
        const message = encodeURIComponent(document.getElementById('message').value);
        const numbersRaw = document.getElementById('numbers').value;
        const numbersArray = numbersRaw.split('\n').map(n => n.trim()).filter(n => n !== "");

        if(numbersArray.length === 0 || message === "") {
            alert("يرجى إدخال الرسالة والأرقام أولاً.");
            return;
        }

        showStatus(`جارٍ تحضير ${numbersArray.length} رسالة...`, "success");

        // إرسال الرسائل بفاصل زمني لتجنب حظر المتصفح للنوافذ
        numbersArray.forEach((number, index) => {
            setTimeout(() => {
                const url = `https://wa.me/${number}?text=${message}`;
                window.open(url, '_blank');
            }, index * 1500); // فاصل ثانية ونصف بين كل نافذة
        });
    }

    function showStatus(text, type) {
        const box = document.getElementById('statusBox');
        box.innerText = text;
        box.className = "status " + type;
        setTimeout(() => box.style.display = "none", 3000);
    }
</script>

</body>
</html>
